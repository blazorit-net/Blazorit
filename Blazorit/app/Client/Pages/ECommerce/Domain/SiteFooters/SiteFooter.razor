<div class="@GetClass("site-footer")">
    <GridRow>
        <GridCol Span="24">
            <h1 class="content">SiteFooter </h1>
        </GridCol>
    </GridRow>
</div>


@code {
    [Parameter]
    public string? Name { get; set; }

    private string GetClass(string classes) {
        if (string.IsNullOrEmpty(Name)) {
            return classes;
        }

        return $"{Name} {classes}";
    }
}
