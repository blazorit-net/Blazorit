@implements IBlazoritComponent

<div class="@(((IBlazoritComponent)this).GetClass("bit-product-card"))">
<GridRow>
    @*Main image of product*@
    <GridCol>
        <Card>
            <h2>@Data.Name</h2>
            <h3>Description</h3>
            <p>@Data.Description</p>
            <div>
                <label>SKU</label>    
                <span>@Data.Sku</span>
            </div>
            <div>
                    <img src="@Data.MainPictureLinkPart" />
            </div>
            <div>
                @foreach (var item in Data.PicturesLinkParts) {
                    <img src="@item.LinkPart" />
                }                    
            </div>
        </Card>
    </GridCol>
    @*Price and buttons*@
    <GridCol>
        <Card>
            <div>
                <Badge Count="@count">
                    <Button>test</Button>
                </Badge>
                <ButtonGroup>
                    <Button OnClick="@(() => count--)">
                        <Icon Type="minus"></Icon>
                    </Button>
                    <Button OnClick="@(() => count++)">
                        <Icon Type="plus"></Icon>
                    </Button>
                </ButtonGroup>
            </div>
            <div>
                <label>Цена</label>
                <p>@Data.Price.ToString("N")</p>
                <Button OnClick="AddToCartButtonClickHandlerAsync">В корзину</Button>
            </div>

        </Card>       
    </GridCol>
</GridRow>

</div>

@code {
    int count = 0;

}