@using Blazorit.Client.Base.Components;
@using Blazorit.Client.Shared.Routes.ECommerce.Admin;
@implements IBlazoritComponent

<div class="@(((IBlazoritComponent)this).GetClass("bit-sider-menu"))">
    <Sider Collapsible Collapsed=@collapsed OnCollapse=@HandleCollapse Class="sider-menu">
        <div class="ant-site-layout-sider-logo" id="logo">
            <a href="/admin">
                <img src="./favicon.png" alt="logo" />
                @if (!collapsed) {
                    <h1>Admin Panel</h1>
                }
            </a>
        </div>
        <Menu Theme="MenuTheme.Dark" DefaultSelectedKeys=@(new[]{"1"}) Mode="MenuMode.Inline">
            <MenuItem Key="1" RouterLink="/">
                <Icon Type="global" Theme="outline" />
                <span>Domain</span>
            </MenuItem>
            @{
                RenderFragment TestsTitle =
                @<span>
                    <Icon Type="code" Theme="outline" />
                    <span>Tests</span>
                </span>
                ;
            }
            <SubMenu Key="testsMenu" TitleTemplate=TestsTitle>
                <MenuItem Key="2" RouterLink="/counter">
                    <Icon Type="desktop" Theme="outline" />
                    <span>Counter</span>
                </MenuItem>
                <MenuItem Key="3" RouterLink="/fetchdata">
                    <Icon Type="desktop" Theme="outline" />
                    <span>Fetch Data</span>
                </MenuItem>
            </SubMenu>
            @*TODO: Rewrite code of template*@
            @{
                RenderFragment userMenuTitle =
                @<span>
                    <Icon Type="user" Theme="outline" />
                    <span>User</span>
                </span>
                ;
            }
            <SubMenu Key="userMenu" TitleTemplate=userMenuTitle>
                <MenuItem Key="1000" RouterLink="/admin/account">Account</MenuItem>
                <MenuItem Key="1001" RouterLink=@AdminPage.ADMIN_LOGIN>SignIn</MenuItem>
                <MenuItem Key="1002" RouterLink=@AdminPage.ADMIN_REGISTER>SignUp</MenuItem>
            </SubMenu>
            @*TODO: Rewrite code of template*@
            @{
                RenderFragment productMenuTitle =
                @<span>
                    <Icon Type="table" Theme="outline" />
                    <span>Products</span>
                </span>
                ;
            }
            <SubMenu Key="productsMenu" TitleTemplate="productMenuTitle">
                <MenuItem Key="2001" RouterLink=@AdminPage.PRODUCTS>Products</MenuItem>
            </SubMenu>
        </Menu>
    </Sider>
</div>