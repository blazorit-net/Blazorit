@using Blazorit.Client.Pages.ECommerce.Domain.HeaderToolbars
@using Blazorit.Client.Pages.ECommerce.Domain.HeaderBrands
@using Blazorit.Client.Pages.ECommerce.Domain.HeaderMenus
@using Blazorit.Client.Pages.ECommerce.Domain.SiteFooter
@using AntDesign

@inherits LayoutComponentBase

<HeadContent>
    <style>
        .site-header-top {
            background-color: #3C3C43;
        }

        footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: #3C3C43;
        }
    </style>
</HeadContent>

<div class="layout-site">
    <GridRow Class="site-header-top">
        <GridCol Offset="3" Span="18">
            <HeaderToolbar Name="site-header_top-body" />
        </GridCol>        
    </GridRow>
    <GridRow Class="site-header-main">
        <GridCol Offset="2" Span="20">
            <HeaderBrand Name="site-header_main-body" />
        </GridCol>        
    </GridRow>
    <GridRow Class="site-header-bottom">
        <GridCol Offset="2" Span="20">
            <HeaderMenu Name="site-header_bottom-body" />
        </GridCol>        
    </GridRow>
    <GridRow Class="site-content">
        <GridCol Offset="2" Span="20">                
            @Body                
        </GridCol>            
    </GridRow>
    <footer>
        <GridRow Class="site-footer">
            <GridCol Offset="2" Span="20">
                <SiteFooterComp Name="site-footer-body"/>
            </GridCol>
        </GridRow>
    </footer>
</div>


